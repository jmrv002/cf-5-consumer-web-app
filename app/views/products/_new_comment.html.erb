<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <div class="rating"></div><br>
      <%= f.text_area :body, class: 'form-control' %>
    </p>
    <p>
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    </p>
  <% end %>
<% end %>