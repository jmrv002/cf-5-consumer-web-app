<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>


<section id="product" class="container">
  <h1>Product</h1>
  <div class="row" data-product-id="<%= @product.id %>">
    <% cache @product do %>
      <div class="col-sm-12 col-md-6">
        <%= image_tag(@product.image_url, class: "card-img-top img-zoom", alt: 'product_img', :data => {:zoom_image => image_url(@product.image_url)})%>
      </div>
      <div class="col-sm-12 col-md-6">
        <h3>Data</h3>
        <p>
          <span><i class="fab fa-product-hunt"></i> Name:</span>
          <%= @product.name %>
        </p>

        <p>
          <span><i class="fas fa-palette"></i> Color:</span>
          <%= @product.colour %>
        </p>

        <p>
          <span><i class="fas fa-dollar-sign"></i> Price:</span>
          <%= @product.price %>
        </p>

        <p>
          <span><i class="fas fa-align-left"></i> Description:</span>
          <%= @product.description %>
        </p>

        <p>Average Rating: <div id="average-rating" class="rated" data-score="<%= @product.average_rating %>"></div> </p>

        <%= form_with(url: '/payments/create') do |form| %>
          <%= hidden_field_tag(:product_id, @product.id) %>
          <%= render partial: "shared/stripe_checkout_button" %>
        <% end %>
      </div>
    <% end %>
    <div class="review-container col-sm-12">
      <%= render "new_comment" %>      
      <%= render 'comments' %>
    </div>
  </div>
</section>


